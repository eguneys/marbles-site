{{#each}}

  <section class="content-block default-bg">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-3 col-lg-3">
          <div class="section-title">
            <h2 >Play Now</h2>
            <div class="line color-6-bg"></div>
            <p>{{name}}</p>
          </div>
          <div class="service-box no-border tts-1">
            {{#link-to 'play' this.id class="btn btn-lg btn-block btn-primary"}}Play{{/link-to}}
            <br/>
            {{#link-to 'games.game' this class="pull-left"}}
              More info <i class="fa fa-arrow-right"></i>
            {{/link-to}}
          </div>
        </div>
        
        <div class="col-xs-6 col-md-3 col-lg-3 text-center">
          <div class="image">
            <img alt="image" src="/public/assets/images/marbles/1.jpg">
          </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 text-center">
          <div class="image">
            <img alt="image" src="/public/assets/images/marbles/2.jpg">
          </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 text-center">
          <div class="image">
            <img alt="image" src="/public/assets/images/marbles/3.jpg">
          </div>
        </div>
      </div>
    </div>
  </section>

{{/each}}
