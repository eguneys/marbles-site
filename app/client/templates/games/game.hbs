<section class="content-block default-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-3 col-lg-3">
        <div class="section-title">
          <h2 >Play Now</h2>
          <div class="line color-6-bg"></div>
          <p>{{name}}</p>
        </div>
        <div class="service-box no-border tts-1">
          {{#link-to "play" this class="btn btn-lg btn-block btn-primary"}}Play{{/link-to}}
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
    </div>
  </div>
</section>

<section class="content-block page-bg">
  <div class="overlay tint" style="min-height:10%">
    <div class="container">  
      <div class="col-md-3 col-lg-3">
        <div class="section-title">
          <h2>Vote Now</h2>
          <div class="line color-6-bg"></div>
        </div>
        <p><span class="dropcap">W</span>
          hat feature would you like to see next?</p>
        <p>Help us improve the game.</p>
        <a class="more-link color-1" {{ action 'showResults'}} href="#">see results <i class="fa fa-arrow-right"></i></a>
      </div>

      {{#if showResults}}
        <div class="col-md-9 col-lg-9 text-center">
          <a class="more-link color-2 pull-right" href="#" {{action 'hideResults'}}><i class="fa fa-arrow-left"></i> Back</a>
          <h4> What feature would you like to see next?</h4>
          {{#each pollChoices }}
            <div class="progress white-bg">
              {{progress-bar vote-percent text}}
            </div>
          {{/each}}
        </div>
        {{else}}
        {{#each pollChoices }}
          <div class="col-md-3 col-lg-3">
            <div class="service-box tts-1 margin-b-30">
              <i class="icon fa fa-gears color-6-bg tts-1-target"></i>
              <h4>{{text}}</h4>
              <p>{{description}}</p>
              <a class="btn btn-secondary" {{ action 'vote' id }}> Vote </a>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</section>
