<section class="page-title dark-bg page-bg">
  <div class="overlay" style="min-height:10%">
    <div class="container">
      <div class="section-title">
        <h2>Games</h2>
        <div class="line"></div>
        <p>Play html5 games on your browser</p>
      </div>
    </div>
  </div>
</section>

<section class="page-info-block">
</section>

<section class="content-block default-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-3 col-lg-3">
        <div class="section-title">
          <h2 >Play Now</h2>
          <div class="line color-6-bg"></div>
          <p>Lose Your Marbles</p>
        </div>
        <div class="service-box no-border tts-1">
          <button class="btn btn-lg btn-block btn-primary">
            {{#link-to "play" "lym" class="btn"}}Play{{/link-to}}
          </button>
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
      <div class="col-xs-6 col-md-3 col-lg-3 text-center">
        <div class="image">
          <img alt="image" src="http://placehold.it/240x240">
        </div>
      </div>
    </div>
  </div>
</section>



<section class="content-block page-bg">
  <div class="overlay tint" style="min-height:10%">

    <div class="container">
      <div class="row">
        <div class="col-md-3 col-lg-3">
          <div class="section-title">
            <h2>Vote Now</h2>
            <div class="line color-6-bg"></div>
          </div>
          <p><span class="dropcap">W</span>
            hat feature would you like to see next?</p>
          <p>Help us improve the game.</p>
          <a class="more-link color-1" {{ action 'showResults'}} href="#">see results <i class="fa fa-arrow-right"></i></a>
        </div>

        {{#if showResults}}
          <div class="col-md-9 col-lg-9 text-center">
            <a class="more-link color-2 pull-right" href="#" {{action 'hideResults'}}><i class="fa fa-arrow-left"></i> Back</a>
            <h4> What feature would you like to see next?</h4>
            {{#each lymChoices }}
            <div class="progress white-bg">
              {{progress-bar vote-percent text}}
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="col-md-3 col-lg-3">
            <div class="service-box tts-1 margin-b-30">
              <i class="icon fa fa-gears color-6-bg tts-1-target"></i>
              <h4>Improve AI</h4>
              <p>More challenging levels</p>
              <a class="btn btn-secondary" {{ action 'vote' 0 }}> Vote </a>
            </div>
          </div>
          <div class="col-md-3 col-lg-3">
            <div class="service-box tts-1 margin-b-30">
              <i class="icon fa fa-users color-6-bg tts-1-target"></i>
              <h4>Multiplayer</h4>
              <p>Play online with friends</p>
              <a class="btn btn-secondary" {{ action 'vote' 1 }}> Vote </a>
            </div>
          </div>
          <div class="col-md-3 col-lg-3">
            <div class="service-box tts-1 margin-b-30">
              <i class="icon fa fa-th-large color-6-bg tts-1-target"></i>
              <h4>Modern Art</h4>
              <p>Redesign the game with custom art</p>
              <a class="btn btn-secondary" {{ action 'vote' 2 }}> Vote </a>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>

<section class="content-block default-bg">
  <div class="container">
    <div class="section-title">
      <h2>Help More?</h2>
      <div class="line color-6-bg"></div>
      <p>Lose Your Marbles</p>
    </div>
    <div class="split-buttons">
      <a class="btn btn-lg btn-primary" {{ action 'pledge' }}>
        Pledge
      </a>{{#link-to 'about' class="btn btn-lg btn-secondary"}}Leave Feedback{{/link-to}}
      <span>or</span>
    </div>
  </div>
</section>
